<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoanConditionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loanConditionsAmountLinLay"
        android:orientation="vertical"
        android:elevation="2dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanConditionsAmountTxt"
            android:text="Сумма займа"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanConditionsAmountValueTxt"
            android:text="10000"
            android:textSize="40sp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanConditionsAmountSeekBar"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loanConditionsPeriodLinLay"
        android:orientation="vertical"
        android:elevation="2dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/loanConditionsAmountLinLay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanConditionsPeriodTxt"
            android:text="Срок займа"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanConditionsPeriodValueTxt"
            android:text="10000"
            android:textSize="40sp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanConditionsPeriodSeekBar"
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loanConditionsPerCentLinLay"
        android:orientation="vertical"
        android:elevation="2dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/loanConditionsPeriodLinLay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanConditionsPerCentTxt"
            android:text="Процентная ставка"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanConditionsPerCentValueTxt"
            android:text="10%"
            android:textSize="40sp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loanConditionsContinueBtn"
        android:layout_margin="10dp"
        android:text="continue"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/loanConditionsPerCentLinLay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>