<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registrationLinLay"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AuthorizationActivityStyle.Icon">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AuthorizationActivityStyle.Icon"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registration"
            style="@style/AuthorizationActivityStyle.Title"
            android:layout_margin="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registrationNameEdtTxt"
            android:hint="@string/username"
            android:layout_margin="20dp"
            android:inputType="text"
            style="@style/CommonEditText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registrationPasswordEdtTxt"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_margin="20dp"
            style="@style/CommonEditText"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registrationBtn"
            android:text="@string/sign_up"
            style="@style/CommonButton.Purple"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/have_account_already"
            style="@style/AuthorizationActivityStyle.Text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/openLoginFragmentBtn"
            android:text="@string/authorize"
            style="@style/CommonButton.White"
            android:layout_margin="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>