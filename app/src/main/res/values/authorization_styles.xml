<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthorizationActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AuthorizationActivityStyle.Icon">
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AuthorizationActivityStyle.Title">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AuthorizationActivityStyle.Text">
        <item name="android:textColor">@color/purple_300</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>

</resources>