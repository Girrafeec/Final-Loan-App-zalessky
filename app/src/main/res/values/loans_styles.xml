<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Loans"></style>

    <style name="Loans.MoneyImage">
        <item name="android:src">@drawable/ic_loan_item_icon</item>
    </style>

    <style name="Loans.SmallText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Loans.SmallText.Green">
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="Loans.SmallText.Red">
        <item name="android:textColor">@color/red_dark</item>
    </style>

    <style name="Loans.BigText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>