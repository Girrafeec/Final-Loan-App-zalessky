<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoanDetail"></style>

    <style name="LoanDetail.Title">
        <item name="android:gravity">start</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="LoanDetail.Value">
        <item name="android:gravity">start</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="LoanDetail.SeekBar">
        <item name="android:thumb">@drawable/seek_bar_thumb</item>
        <item name="thumbTint">@color/light_gray</item>
        <item name="android:progressTint">@color/purple_200</item>
    </style>

    <style name="LoanDetail.Layout">
        <item name="android:background">@drawable/white_recktangle_with_dotted_stroke</item>
    </style>

</resources>