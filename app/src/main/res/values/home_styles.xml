<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Banner"></style>

    <style name="Banner.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Banner.Title.Purple" parent="Banner.Title">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="Banner.Title.White" parent="Banner.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Banner.BannerStyle">
        <item name="android:elevation">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Banner.BannerStyle.LightPurple">
        <item name="android:background">@drawable/light_purple_rounded_recktangle</item>
    </style>

    <style name="Banner.BannerStyle.Purple">
        <item name="android:background">@drawable/purple_rounded_recktangle</item>
    </style>

    <style name="Instruction"></style>

    <style name="Instruction.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Instruction.CardView">
        <item name="cardCornerRadius">20dp</item>
    </style>

</resources>